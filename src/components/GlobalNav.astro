---
import { menuItems } from '@/lib/menuItems'
---

<nav>
  <ul>
    {
      menuItems.map((item) => (
        <li>
          <a href={`${item.href}`}>{item.label}</a>
        </li>
      ))
    }
  </ul>
</nav>

<style lang="scss">
  nav {
    display: none;
    position: fixed;
    top: 80px;
    left: 0;
    width: 100%;
    height: 100vh;
    background: #dedede;
    z-index: 1000;

    &.is-open {
      display: block;
    }

    ul {
      width: fit-content;
      margin: 0 auto;

      li {
        font-size: 1.8rem;
      }

      li + li {
        margin-top: 24px;
      }
    }
  }
</style>
